{
  "extends": "@vue/tsconfig/tsconfig.json",
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": [
      "@dcloudio/types",
      "@uni-helper/uni-app-types",
      "@mini-types/alipay",
      "miniprogram-api-typings",
      "vite/client",
      "wot-design-uni/global"
    ]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "vueCompilerOptions": {
    "plugins": ["@uni-helper/uni-app-types/volar-plugin"],
    "target": 3
  }
}
