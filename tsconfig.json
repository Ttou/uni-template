{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "useDefineForClassFields": true,
    "skipLibCheck": true,

    /* Node mode */
    "moduleResolution": "Node",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "preserve",
    "allowJs": true,

    /* Custom */
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["@dcloudio/types", "@ttou/uv-typings/v3", "vite/client"]
  },
  "include": ["src", "types"],
  "exclude": ["node_modules"],
  "vueCompilerOptions": {
    "target": 3
  },
  "references": [{ "path": "./tsconfig.node.json" }]
}
